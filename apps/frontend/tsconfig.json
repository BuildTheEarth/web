{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*"],
			"@/typings/*": ["typings/*"],
			"@/hooks/*": ["src/hooks/*"],
			"@/pages/*": ["src/pages/*"],
			"@/styles/*": ["src/styles/*"],
			"@/utils/*": ["src/utils/*"],
			"@/src/*": ["src/*"],
			"@/public/*": ["public/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next-i18next.config.js", "next.config.js", ".next/types/**/*.ts"]
}
